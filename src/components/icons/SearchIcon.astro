---
interface Props {
  className?: string;
  id?: string;
}

const { className, id }: Props = Astro.props;
---

<svg
  class={`svg-icon ${className}`}
  id={id}
  xmlns="http://www.w3.org/2000/svg"
  width="20"
  height="20"
  viewBox="0 0 24 24"
  fill="none"
  stroke="#000000"
  stroke-width="1"
  stroke-linecap="square"
>
  <circle cx="11" cy="11" r="8"></circle>
  <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
</svg>

<style>
  .svg-icon {
    height: 2rem;
    cursor: pointer;
  }
</style>
