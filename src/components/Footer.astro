<style>
  footer {
    background: #cf8780;
    width: 100%;
    /* height: var(--footer-height); */
    color: white;
    /* display: grid !important; */
    /* align-items: center; */
    font-family: "Open Sans", sans-serif;
    font-size: 0.9rem;
  }

  .footer-text {
    height: var(--footer-height);
    display: grid;
    grid-template-columns: auto auto;
    grid-template-rows: 1fr 1fr;
    place-items: center;
    gap: 0.5rem;
    width: fit-content;
    margin: 0 auto;
  }

  .footer-text div {
    text-align: center;
  }

  .grid-3 {
    grid-column: 1 / 3;
  }

  /* div:nth-of-type(1) {
    grid-column: 1 / 3;
  } */

  a {
    color: white;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  @media screen and (max-width: 480px) {
    .footer-text {
      grid-template-columns: auto;
      grid-template-rows: 1fr 1fr 1fr;
      gap: 0;
    }

    .grid-3 {
      grid-column: 1 / 2;
    }
  }
</style>
