---
import type { Node } from "../types/Node";
import Video from "./home/Video.astro";
import NodeNavbar from "./node/NodeNavbar.astro";

interface Props {
  node: Node;
}

const { node }: Props = Astro.props;
---

<section>
  <article class="node">
    <h1>{node?.title?.rendered}</h1>
    <div class="content" set:html={node?.content?.rendered} />
  </article>
</section>

<style is:global>
  .node {
    max-width: 1000px;
    width: 90%;
    margin: -3rem auto 2rem auto;
    background: white;
    padding: 2rem;
    border-radius: 2rem;
    box-shadow: 0 0 1rem rgba(0, 0, 0, 0.2);
  }

  .node h1,
  .node h2,
  .node h3,
  .node h4,
  .node h5,
  .node h6 {
    font-family: "Playfair Display", serif;
  }

  .node h1 {
    text-align: center;
  }

  .content {
    font-family: "Open Sans", sans-serif;
  }

  .content p {
    text-align: justify;
  }

  .content .wp-block-image figure {
    align-items: center;
  }

  .content .wp-block-image img {
    max-width: 100%;
    display: block;
    height: auto;
    margin: 0 auto;
  }

  .content figcaption {
    font-size: 0.8rem;
    text-align: center;
    margin: 0.5rem 0;
    color: #666;
  }

  .content blockquote {
    max-width: 900px;
    font-size: 1rem;
    font-style: italic;
    font-family: "Open Sans", sans-serif;
    margin: 2rem auto;
    padding: 0 1rem;
    border-left: 0.5rem solid #ccc;
  }

  .content blockquote cite {
    font-size: 0.8rem;
    font-style: normal;
    font-family: "Open Sans", sans-serif;
    display: block;
    text-align: left;
    margin-top: 0.5rem;
  }

  .content pre {
    max-width: 900px;
    font-size: 1rem;
    font-family: "Fira Mono", monospace;
    margin: 2rem auto;
    padding: 0 1rem;
    border-left: 0.5rem solid #ccc;
  }

  .content figure audio {
    width: 100%;
  }

  .content a {
    padding-right: 1rem;
  }

  .content a.wp-block-file__button {
    width: fit-content;
    height: 3rem;
    padding: 0 1rem;
    border: none;
    background-color: #b5584f;
    font-family: "Open Sans", sans-serif;
    border-radius: 10rem;
    display: inline-grid;
    align-items: center;
    text-decoration: none;
    appearance: button;
    color: white;
    border: 0.1rem solid #b5584f;
  }

  .content a.wp-block-file__button:hover {
    box-shadow: 0.1rem 0.1rem 0rem 0rem #b5584f;
    color: #b5584f;
    background: white;
    transition: 0.1s;
  }

  .content a.wp-block-file__button:active {
    box-shadow: -0.1rem -0.1rem 0rem 0rem #b5584f;
    transform: translate(0.1rem, 0.1rem);
    transition: 0.1s;
  }

  .content table {
    width: 100%;
    border-collapse: collapse;
    border-spacing: 0;
    margin: 2rem 0;
    overflow: hidden;
    border-style: hidden;
  }

  .content table tbody {
    background: #f7f7f7;
    padding: 0.5rem;
    text-align: left;
  }

  .content table td {
    padding: 0.7rem 1rem;
    text-align: left;
    border: 1px solid #ccc;
  }

  .wp-block-embed__wrapper {
    position: relative;
    padding-bottom: min(50%, 530px);
    padding-top: 30px;
    height: 0;
    overflow: hidden;
    max-width: 1000px;
    margin: 0 auto;
  }
  .wp-block-embed__wrapper iframe,
  .wp-block-embed__wrapper object,
  .wp-block-embed__wrapper embed {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>